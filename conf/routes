# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /get/:id                    controllers.CarAdvertsController.getAdvert(id: UUID)
GET     /getAll                     controllers.CarAdvertsController.getAllAdverts
POST    /create                     controllers.CarAdvertsController.createAdvert
POST    /delete/:id                 controllers.CarAdvertsController.deleteAdvert(id: UUID)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
